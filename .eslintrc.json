{
    "extends": ["next/babel", "next/core-web-vitals", "react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParents": "always",
                "semi": false,
                "trailingComma": "none",
                "tabWidth": 2,
                "endOfLine": "auto",
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "jsxSingleQuote": true
            }
        ]
    }
}
